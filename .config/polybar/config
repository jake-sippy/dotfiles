[colors]
background = #88000000
foreground = #efefef
solid-black = #000000
light-foreground = #66eeeeee
dark-background = #bb000000
red-background = #bb330000
green = #00aa00

[bars]
monitor-left        = ${env:L_MONITOR}
monitor-right       = ${env:R_MONITOR}
width               = 100%
height              = 31
bottom              = false
underline-size      = 5
spacing             = 1
padding-left        = 0
padding-right       = 0
module-margin-left  = 0
module-margin-right = 0

[fonts]
font-0 = Noto Sans:pixelsize=10;0
font-1 = Font Awesome 5 Free Regular:pixelsize=8;0
font-2 = Font Awesome 5 Free Solid:pixelsize=8;0
font-3 = unifont:pixelsize=8;0

[bar/left]
monitor  = ${bars.monitor-left}

modules-left = bspwm xwindow
modules-center = mpd
modules-right = volume network date

width    = ${bars.width}
height   = ${bars.height}
bottom   = ${bars.bottom}

underline-size  = ${bars.underline-size} 
underline-color = ${colors.foreground}

background = ${colors.background}
foreground = ${colors.foreground}

spacing             = ${bars.spacing}
padding-left        = ${bars.padding-left}
padding-right       = ${bars.padding-right} 
module-margin-left  = ${bars.module-margin-left} 
module-margin-right = ${bars.module-margin-right}

font-0 = ${fonts.font-0}
font-1 = ${fonts.font-1}
font-2 = ${fonts.font-2}
font-3 = ${fonts.font-3}

wm-restack = bspwm

[bar/right]
monitor  = ${bars.monitor-right}

modules-left = bspwm xwindow
modules-center =
modules-right = volume network date

width    = ${bars.width} 
height   = ${bars.height}
bottom   = ${bars.bottom}

