module-margin-left  = ${bars.module-margin-left}
module-margin-right = ${bars.module-margin-right}

font-0 = ${fonts.font-0}
font-1 = ${fonts.font-1}
font-2 = ${fonts.font-2}
font-3 = ${fonts.font-3}

wm-restack = bspwm


; MODULES //////////////////////////////////////

[module/bspwm]
type = internal/bspwm

format = <label-state> <label-mode>

label-focused = %name%
label-focused-background = ${colors.foreground}
label-focused-foreground = ${colors.solid-black}
label-focused-underline = ${colors.foreground}
label-focused-padding = 2

label-occupied = %name%
label-occupied-padding = 2

label-urgent = %name%
label-urgent-background = ${colors.red-background}
label-urgent-padding = 2

label-empty = %name%
label-empty-foreground = ${colors.light-foreground}
label-empty-padding = 2

[module/xwindow]
type = internal/xwindow
label = %title:0:50:...%
label-padding = 4

[module/network]
type = internal/network
interface=enp7s0
interval = 3.0

label-connected =  %local_ip%
label-connected-foreground = #eefafafa
label-connected-padding = 3

label-disconnected = not connected
label-disconnected-foreground = ${colors.light-foreground}
label-disconnected-padding = 3

[module/date]
type = internal/date

; Seconds to sleep between updates
interval = 1.0

; if `date-alt` or `time-alt` is defined, clicking
; the module will toggle between formats
date = %A, %d %B %Y
time = %r

label = %date% %time%
format =   <label>
format-background = ${colors.dark-background}
format-padding = 3


[module/volume]
type = internal/pulseaudio
sink = alsa_output.pci-0000_0b_00.3.analog-stereo

format-volume = <ramp-volume> <label-volume>
format-muted = <label-muted>
label-volume = %percentage%
label-muted =   -----
label-muted-foreground = #aaa
format-volume-padding = 2
format-muted-padding = 2

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-headphones-0 = 

[module/cpu]
type = internal/cpu
interval = 1
format = <label> <ramp-coreload>
label = CPUS
ramp-coreload-spacing = 1
ramp-coreload-0 = ▁
ramp-coreload-1 = ▂
ramp-coreload-2 = ▃
ramp-coreload-3 = ▄
ramp-coreload-4 = ▅
ramp-coreload-5 = ▆
ramp-coreload-6 = ▇
ramp-coreload-7 = █

[module/mpd]
type = internal/mpd

host = 127.0.0.1
port = 6600

interval = 1

format-online = <icon-prev> <icon-seekb> <icon-stop> <toggle> <icon-seekf> <icon-next>  <icon-repeat> <icon-random>  <bar-progress> <label-time>  <label-song>
;format-offline = <label-offline>

label-offline = mpd is offline

label-song = %artist% - %title%

label-time = (%elapsed% / %total%)

; Only applies if <icon-X> is used
icon-play = 
icon-pause = 
icon-stop = 
icon-prev = 
icon-next = 
icon-seekb = 
icon-seekf = 
icon-random = 
icon-repeat = 

; Used to display the state of random/repeat/repeatone/single
; Only applies if <icon-[random|repeat|repeatone|single]> is used
toggle-on-foreground = ${colors.foreground}
toggle-off-foreground = ${colors.light-foreground}

; Only applies if <bar-progress> is used
bar-progress-width = 45
bar-progress-indicator =
bar-progress-fill = █
bar-progress-empty = █

bar-progress-fill-foreground = ${colors.green}
bar-progress-empty-foreground = ${colors.light-foreground}
bar-progress-indicator-foreground = ${colors.foreground}
